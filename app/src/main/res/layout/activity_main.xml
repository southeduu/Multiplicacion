<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="#F0F4F8"
    tools:context="com.example.multiplicacion.MainActivity">

    <!-- Título de la Aplicación -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginBottom="30dp" />

    <!-- Campo de Entrada 1 -->
    <EditText
        android:id="@+id/etNumero1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/hint_number_1"
        android:padding="15dp"
        android:layout_marginBottom="16dp"
        android:minHeight="55dp"
        android:background="@android:drawable/editbox_background"
        android:autofillHints="number" />

    <!-- Campo de Entrada 2 -->
    <EditText
        android:id="@+id/etNumero2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/hint_number_2"
        android:padding="15dp"
        android:layout_marginBottom="40dp"
        android:minHeight="55dp"
        android:background="@android:drawable/editbox_background"
        android:autofillHints="number" />

    <!-- Contenedor de Botones (Fila) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <!-- Botón Sumar -->
        <Button
            android:id="@+id/btnSumar"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="@string/op_sum"
            android:textSize="28sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#3498DB"
            android:contentDescription="@string/desc_sum" />

        <!-- Botón Restar -->
        <Button
            android:id="@+id/btnRestar"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="@string/op_res"
            android:textSize="28sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#2ECC71"
            android:contentDescription="@string/desc_res" />

        <!-- Botón Multiplicar -->
        <Button
            android:id="@+id/btnMultiplicar"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="@string/op_mul"
            android:textSize="28sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#E67E22"
            android:contentDescription="@string/desc_mul" />

        <!-- Botón Dividir -->
        <Button
            android:id="@+id/btnDividir"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="@string/op_div"
            android:textSize="28sp"
            android:backgroundTint="#E74C3C"
            android:contentDescription="@string/desc_div" />

    </LinearLayout>

    <!-- Resultado -->
    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_result"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="25dp"
        android:textColor="#2C3E50"
        android:background="#ECF0F1"
        android:elevation="6dp" />

</LinearLayout>